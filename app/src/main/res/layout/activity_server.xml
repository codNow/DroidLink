<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.server.ServerActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollable">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/primaryDark"
            android:elevation="5dp"
            android:id="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set-Up Server"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/theme_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/server_header"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_background2"
                    android:text="Settings"
                    android:fontFamily="@font/josefont"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/server_setting"/>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:text="@string/server_name"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_four"
                            android:text="@string/colon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/button_background2"
                            android:padding="15dp"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:id="@+id/server_title" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:text="@string/port_number"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_one"
                            android:text="@string/colon" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/button_background2"
                            android:padding="15dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="5900"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColorHint="@color/text_color"
                            android:textSize="15sp"
                            android:id="@+id/port_number"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:text="@string/ip_address"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_two"
                            android:text="@string/colon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/button_background2"
                            android:padding="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/ip_address" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:text="@string/password"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_three"
                            android:text="@string/colon" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/button_background2"
                            android:padding="15dp"
                            android:layout_weight="1"
                            android:inputType="textPassword"
                            android:textSize="15sp"
                            android:id="@+id/password"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:text="@string/access_key"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_five"
                            android:text="@string/colon" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/button_background2"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:textColorHint="@color/text_color"
                            android:textSize="13sp"
                            android:inputType="textPassword|numberPassword"
                            android:id="@+id/access_key"/>
                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/options"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_background2"
                    android:fontFamily="@font/josefont"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:layout_marginStart="5dp"
                    android:id="@+id/server_options"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="@string/start_on_boot" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_six"
                            android:text="@string/colon" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/settings_start_on_boot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:theme="@style/CustomSwitchStyle"
                            android:text="" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="@string/start_bootdelay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background2"
                            android:inputType="number"
                            android:hint="@string/zero"
                            android:id="@+id/settings_start_on_boot_delay"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="File Transfer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_seven"
                            android:text="@string/colon" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/settings_file_transfer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:theme="@style/CustomSwitchStyle"
                            android:text="" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="Mouser Coursors" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:id="@+id/colon_eight"
                            android:text="@string/colon" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/settings_show_pointers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:theme="@style/CustomSwitchStyle"
                            android:text="" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="View Only" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/settings_view_only"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:theme="@style/CustomSwitchStyle"
                            android:text="" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="Scaling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/settings_scaling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:thumbColor="@color/blue"
                            app:trackColor="@color/logo_background"
                            android:stepSize="5"
                            android:value="100"
                            android:valueFrom="10"
                            android:valueTo="100" />

                    </TableRow>

                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:fontFamily="@font/josefont"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_background2"
                    android:padding="10dp"
                    android:textColor="@color/theme_color"
                    android:layout_marginStart="5dp"
                    android:visibility="visible"
                    android:id="@+id/server_permission"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:padding="10dp"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="@string/screen_capturing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/permission_status_screen_capturing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/theme_color"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/button_background2"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/denied" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="@string/input_gesture" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/permission_status_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_marginStart="5dp"
                            android:padding="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/theme_color"
                            android:textSize="15sp"
                            android:background="@drawable/button_background2"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/denied" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color"
                            android:text="@string/media_access" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/colon" />

                        <TextView
                            android:id="@+id/permission_status_file_access"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_marginStart="5dp"
                            android:padding="15dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/theme_color"
                            android:background="@drawable/button_background2"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/denied" />

                    </TableRow>

                </TableLayout>


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:background="@drawable/button_background"
                    android:padding="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/start_button"/>





                <LinearLayout
                    android:id="@+id/outbound_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reverse_vnc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/connect"
                        android:textColor="@color/blue"
                        android:background="@drawable/button_background2"
                        android:layout_marginEnd="5dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/repeater_vnc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/repeater"
                        android:textColor="@color/blue"
                        android:background="@drawable/button_background2"
                        android:layout_marginEnd="5dp"/>

                </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>


    <LinearLayout
        android:id="@+id/permission_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="25dp"
        android:layout_marginStart="25dp"
